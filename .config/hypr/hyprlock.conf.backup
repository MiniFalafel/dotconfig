# Nothing yet

background {
	monitor = # leaving blank to select default

	path = ~/.config/hypr/wallpapers/liftoff_pink.png
	
	blur_passes = 2
	noise = 0.05
}

input-field
{
	monitor = # blank for default

	size = 250, 50
	outline_thickness = 3
	dots_size = 0.2
	dots_spacing = 0.15
	dots_center = true
	dots_rounding = -1
	outer_color = rgb(151515)
	inner_color = rgb(FFFFFF)
	font_color = rgb(10, 10, 10)
	fade_on_empty = true
	fade_timeout = 1000 # ms before fade_on_empty is triggered
	placeholder_text = <i>input password...</i> # text in empty input box
	hide_input = false
	rounding = -1
	
	# Authentication
	check_color = rgb(204, 136, 34)
	fail_color = rgb(204, 34, 34)
	fail_text = <i>incorrect password</i>
	fail_transition = 300 # ms to change to fail appearance

	# weird coloring + states
	capslock_color = -1
	numlock_color = -1
	bothlock_color = -1
	invert_numlock = false
	swap_font_color = false
	position = 0, -20
	halign = center
	valign = center
}

label
{
	monitor = # use default
	
	text = cmd[update:1000] echo "$TIME"
	color = rgba(200, 200, 200, 1.0)
	font_size = 50
	position = -100, -40
	halign = right
	valign = bottom
	shadow_passes = 3
	shadow_size = 10
}

label
{
	monitor = 
	
	text = $USER
	color = rgba(200, 200, 200, 1.0)
	font_size = 30
	position = -100, 160
	halign = right
	valign = bottom
	shadow_passes = 3
	shadow_size = 10
	
}

